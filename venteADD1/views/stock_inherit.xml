<?xml version="1.0" encoding="utf-8"?>
  <odoo>
     <record id="stock_picking_form_inherit1" model="ir.ui.view">
        <field name="name">stock.picking.form1</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='quantity_done']" position ="after">
                 <field name="acount_retour_serie"/>
            </xpath>
          <xpath expr="//field[@name='partner_id']" position ="after">
                 <field name="stock_block" invisible="1" />
            </xpath>
          <xpath expr="//field[@name='partner_id']" position ="after">
                 <field name="stock_block_yes"  invisible="1"/>
            </xpath>
          <xpath expr="//form/header/button[@name='button_validate']" position="attributes">
                <attribute name="attrs">{'invisible': [('stock_block_yes','=','Impaye')]}</attribute>
            </xpath>
          <!--
          <xpath expr="//form/header/button[@name='button_validate'][2]" position="attributes">
                <attribute name="attrs">{'invisible': [('stock_block_yes','=','Impaye')]}</attribute>
            </xpath>
          <xpath expr="//form/header/button[@name='button_validate'][1]" position="attributes">
                <attribute name="attrs">{'invisible': [('state', '!=', 'delivery')]}</attribute>
            </xpath>
          <xpath expr="//form/header/button[@name='button_validate'][2]" position="attributes">
                <attribute name="attrs">{'invisible': [('state', '!=', 'delivery')]}</attribute>
            </xpath>
          -->
          <xpath expr="//field[@name='partner_id']" position ="after">
                 <field name="stock_type_id"  invisible="1"/>
            </xpath>
           <xpath expr="//page[@name='operations']" position="after">
                
                        <page string="Compteur" name="compteur">
                            <group>
                                <group >
                                   <field name="stock_type_id" />
                                  
                                    <field name="stock_compteur_depart_C" attrs="{'required':[('stock_type_id','=', 8)]}" />
                                    <field name="stock_compteur_depart_Nb" attrs="{'required':[('stock_type_id','=',8)]}"/>
                                </group>
                              <group >
                                    <field name="stock_compteur_retour_C" attrs="{'required':[('stock_type_id','=', 6)]}"/>
                                    <field name="stock_compteur_retour_Nb" attrs="{'required':[('stock_type_id','=', 6)]}"/>
                                </group>
                            </group>
                        </page>                       
                

            </xpath>
         
         

        </field>
    </record>
  </odoo>
