
<odoo>
<data>
 <record id="ir_cron_client_contract" model="ir.cron">
            <field name="name">Client contrat scheduler</field>
            <field name="active" eval="True" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">1</field>
     <!--
     <field name="nextcall" eval="(datetime.now() + timedelta(days=1)).strftime('%Y-%m-%d 23:59:59')" />     -->
             <field name="model_id" ref="model_sale_order" />
             <field name="code">model.send_contrat_email()</field>
</record>
<record id="sale_order_form_inherit_email" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.email</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                    <field name="sale_year_email" invisible="1"/>
                    <field name="sale_month_email" invisible="1"/>
            </xpath>

        </field>
</record>


</data>
</odoo>



